tag_prefix=""
tag_suffix="-php${PHP_VERSION}"

tags="php${PHP_VERSION_MINOR} ${tag_ver_minor}-php${PHP_VERSION_MINOR} ${tag_ver_full}-php${PHP_VERSION} ${tag_ver_full}-php${PHP_VERSION}-${build} "
args="HTTPD_VERSION=$HTTPD_VERSION HTTPD_SHA256=$HTTPD_SHA256 PHP_VERSION=$PHP_VERSION PHP_SHA256=$PHP_SHA256 "
