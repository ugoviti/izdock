#source $PWD/vars

build=93

# https://www.apache.org/dist/httpd/
HTTPD_VERSION=2.4.34
HTTPD_SHA256=fa53c95631febb08a9de41fd2864cfff815cf62d9306723ab0d4b8d7aa1638f0

# http://php.net/downloads.php
PHP_VERSION_MAJOR=7
PHP_VERSION_MINOR=7.1
PHP_VERSION=7.1.21
PHP_SHA256=d4da6dc69d3fe1e6b2b80f16b262f391037bfeb21213c966e026bd45d7ca2813

tag_ver_major=2
tag_ver_minor=2.4
tag_ver_full=$HTTPD_VERSION
